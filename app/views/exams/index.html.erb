<h1>Listing exams</h1>

<table>
  <tr>
    <th>Maths</th>
    <th>Physics</th>
    <th>Chemistry</th>
    <th>Total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exams.each do |exam| %>
  <tr>
    <td><%= exam.maths %></td>
    <td><%= exam.physics %></td>
    <td><%= exam.chemistry %></td>
    <td><%= exam.total %></td>
    <td><%= link_to 'Show', exam %></td>
    <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
    <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

